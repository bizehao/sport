<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <Button android:id="@+id/test_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试1"/>
            <Button android:id="@+id/test_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试2"/>
            <Button android:id="@+id/test_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试3"/>
            <Button android:id="@+id/test_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试4"/>
            <Button android:id="@+id/test_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="测试5"/>
        </LinearLayout>

        <!--<com.sport.view.dashBoard.DashboardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:text="当前速度"
                app:unit="m/s"/>-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/blue">
            <com.sport.view.MyLineView
                    android:id="@+id/target"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:lineColor="@color/black"
                    android:padding="15dp"
                    android:background="@color/yellow"/>
            <Button android:id="@+id/btn_test"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/zi_fu_hua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textSize="1sp"
                android:typeface="monospace"/>


    </LinearLayout>
</layout>
